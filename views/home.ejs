                    <img src="/main-product.png" alt="" />
                </div>
            </div>
        </div>
    </div>

    <div class="categories">
        <div class="small-container">
            <div class="row">
                <div class="col-3">
                    <img src="/1.png" alt="" />
                </div>
                <div class="col-3">
                    <img src="/2.JPG" alt="" />
                </div>
                <div class="col-3">
                    <img src="/3.png" alt="" />
                </div>
            </div>
        </div>
    </div>

    <div class="small-container">
        <h2 class="title">Best Seller</h2>
        <div class="row">
            <%
            if(userData.length!=0){
            var i=1;
            userData.slice(0, 4).forEach(function(data){
            %>
            <div class="col-4">
                <a href="product-details/<%= data.product_no %>">
                    <img src="/<%= data.image %>" alt="">
                    <h4><%=data.name%></h4>
                </a>   
                <p>PHP <%=data.price%></p>
            </div>
            <%  i++; }) %>
            <% } else{ %>
            <div class="col-4">
                <a href="product-details">
                   <img src="/placeholder.png" alt="">
                    <h4>PLACEHOLDER</h4>
                </a>   
                <p>PLACEHOLDER</p>
            </div>
            <% } %>
        </div>

        <h2 class="title">Other Products</h2>
        <div class="row">
            <%
            if(userData.length!=0){
            var i=1;
            userData.slice(4, 8).forEach(function(data){
            %>
            <div class="col-4">
                <a href="product-details/<%= data.product_no %>">
                    <img src="/<%= data.image %>" alt="">
                    <h4><%=data.name%></h4>
                </a>   
                <p>PHP <%=data.price%></p>
            </div>
            <%  i++; }) %>
            <% } else{ %>
            <div class="col-4">
                <a href="product-details">
                   <img src="/placeholder.png" alt="">
                    <h4>PLACEHOLDER</h4>
                </a>   
                <p>PLACEHOLDER</p>
            </div>
            <% } %>
        </div>
    </div>

    <div class="offer">
        <div class="small-container">
            <div class="row">
                <%
                if(userData1.length!=0){
                var i=1;
                userData1.forEach(function(data1){
                %>
                <div class="col-2">
                    <img src="/<%=data1.image%>" alt="" class="offer-img" />
                </div>
                <div class="col-2">
                    <p>Featured Product</p>
                    <h1> <%=data1.name%> </h1>
                    <small> <%=data1.details%> </small> </br>
                    <a href="/product-details/<%=data1.product_no%>" class="btn">Buy Now &#8594;</a>
                </div>
                <%  i++; }) %>
                <% } else{ %>
                    <div class="col-2">
                        <img src="/placeholder.png" alt="" class="offer-img" />
                    </div>
                    <div class="col-2">
                        <p>Featured Product</p>
                        <h1>PLACEHOLDER</h1>
                        <small>
                            PLACEHOLDER PRODUCT DETAILS
                        </small> </br>
                        <a href="#" class="btn">Buy Now &#8594;</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

