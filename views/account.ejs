<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/style.css" />
    <title>Createev</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
</head>

<body>
    <div class="navbar">
        <div class="logo">
            <a href="/">
                <img src="/main-logo.png" alt="" />
            </a>
        </div>
        <nav>
            <ul id="MenuItems">
                <li><a href="/">Home</a></li>
                <li><a href="/product">Products</a></li>
                <li><a href="/about">About us</a></li>
                <li><a href="/contact">Contact Us</a></li>
                <li><a href="/account">Account</a></li>
            </ul>
            <a href="cart">
                <img src="/shopping-cart.png" alt="" class="cart-icon" />
            </a>
        </nav>
        <img src="/menu.png" alt="" class="menu-icon" onclick="menutoggle()">
    </div>

    <div class="account-page">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <img src="/main-product.png" alt="">
                </div>
                <div class="col-2">
                    <div class="form-container">
                        <div class="form-btn">
                            <span onclick="login()">Login</span>
                            <span onclick="signup()">Sign Up</span>
                            <hr id="indicator">
                        </div>
                        <form id="Login" action="/login" method="POST">
                            <input type="text" required name="loginName" id="loginName" placeholder="Email">
                            <input type="password" required name="loginPass" id="loginPass" placeholder="Password">
                            <button type="submit" class="btn">Login</button>
                            <a href="/forgot">Forgot Password</a>
                        </form>
                        <form id="Signup" action="/signup" method="POST">
                            <input type="text" required name="signupName" id="signupName" placeholder="Username">
                            <input type="email" required name="signupEmail" id="signupEmail" placeholder="Email">
                            <input type="text" name="signupAddress" id="signupAddress" placeholder="Address">
                            <input type="text" name="signupNo" id="signupNo" placeholder="Contact No.">
                            <input type="password" required name="signupPass" id="signupPass" placeholder="Password">
                            <button type="submit" class="btn">Sign Up</button>
                            <div id='status' class='invisible'><p style="color:red;"><%= error %></p></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col-1">
                    <div class="app-logo">
                        <img src="/footer-logo.png" alt="">
                        <img src="" alt="">
                    </div>
                    <h3>For The Happiness Of The Customer</h3>
                </div>
            </div>
            <hr>
            <p class="copyright">Copyright &copy; 2020</p>
        </div>
    </div>

    <script>
        let MenuItems = document.getElementById("MenuItems");

        MenuItems.style.maxHeight = "0px";

        function menutoggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px";
            } else {
                MenuItems.style.maxHeight = "0px";
            }
        }

        let Login = document.getElementById("Login");
        let Signup = document.getElementById("Signup");
        let indicator = document.getElementById("indicator");

        function signup(){
            Signup.style.transform = "translateX(0px)";
            Login.style.transform = "translateX(0px)";
            indicator.style.transform = "translateX(100px)";
        }

        function login(){
            Signup.style.transform = "translateX(300px)";
            Login.style.transform = "translateX(300px)";
            indicator.style.transform = "translateX(0px)";
        }
    </script>

</body>

</html>