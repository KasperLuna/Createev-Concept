<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>Createev</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
</head>

<body>
    <div class="navbar">
        <div class="logo">
            <a href="/">
                <img src="/main-logo.png" alt="" />
            </a>
        </div>
        <nav>
            <ul id="MenuItems">
                <li><a href="/">Home</a></li>
                <li><a href="/product">Products</a></li>
                <li><a href="/about">About us</a></li>
                <li><a href="/contact">Contact us</a></li>
                <li><a href="/account">Account</a></li>
            </ul>
            <a href="cart">
                <img src="/shopping-cart.png" alt="" class="cart-icon" />
            </a>
        </nav>
        <img src="/menu.png" alt="" class="menu-icon" onclick="menutoggle()">
    </div>

    <div class="small-container">
        <div class="row row-2">
            <h2>All Products</h2>
            <select name="sorting" id="sorting" onchange="if (this.value) document.location.href='/' + this.value">
                <option value="" selected disabled>Product Sorting:</option>
                <option value="product/">Default Sorting</option>
                <option value="product/low-to-high">Price Low to High</option>
                <option value="product/high-to-low">Price High to Low</option>
            </select>
        </div>


        <div class="row">
            <%
            if(userData.length!=0){
            var i=1;
            userData.forEach(function(data){
            %>
            <div class="col-4">
                <a href="/product-details/<%= data.product_no %>">
                    <img src="/<%= data.image %>" alt="">
                    <h4><%=data.name%></h4>
                </a>   
                <p>PHP <%=data.price%></p>
            </div>
            <%  i++; }) %>
            <% } else{ %>
            <div class="col-4">
                <a href="/product-details/placeholder">
                   <img src="/placeholder.png" alt="">
                    <h4>PLACEHOLDER</h4>
                </a>   
                <p>PLACEHOLDER</p>
            </div>
            <% } %>
        </div>
		
    </div>


    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col-1">
                    <div class="app-logo">
                        <img src="/footer-logo.png" alt="">
                        <img src="" alt="">
                    </div>
                    <h3>For The Happiness Of The Customer</h3>
                </div>
            </div>
            <hr>
            <p class="copyright">Copyright &copy; 2020</p>
        </div>
    </div>

    <script>
        let MenuItems = document.getElementById("MenuItems");

        MenuItems.style.maxHeight = "0px";

        function menutoggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px";
            } else {
                MenuItems.style.maxHeight = "0px";
            }
        }
    </script>
    
</body>

</html>