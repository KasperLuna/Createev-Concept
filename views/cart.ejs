<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>Createev</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
</head>

<body>
    <div class="navbar">
        <div class="logo">
            <a href="/">
                <img src="/main-logo.png" alt="" />
            </a>
        </div>
        <nav>
            <ul id="MenuItems">
                <li><a href="/">Home</a></li>
                <li><a href="/product">Products</a></li>
                <li><a href="/about">About us</a></li>
                <li><a href="/contact">Contact us</a></li>
                <li><a href="/account">Account</a></li>
            </ul>
            <a href="cart">
                <img src="/shopping-cart.png" alt="" class="cart-icon" />
            </a>
        </nav>
        <img src="/menu.png" alt="" class="menu-icon" onclick="menutoggle()">
    </div>

    <div class="small-container cart-page">
        <table>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Sub-Total</th>
            </tr>

            <%
            if(userData.length!=0){
            var i=1;
            var total;
            var subTotal;
            userData.forEach(function(data){
            subTotal = cart[data.product_no] * data.price;
            %>
            <tr>
                <td>
                    <div class="cart-info">
                        <img src="<%= data.image%>" alt="">
                        <div>
                            <p><%=data.name %> - <%=cart_options[data.product_no] %></p>
                            <small>PHP <%=data.price %> .00</small>
                            <br>
                            <a href="/removeFromCart/<%=data.product_no%>">Remove</a>
                        </div>
                    </div>
                </td>
                <td><p text-align: center;><%=cart[data.product_no]%></p></td>
                <td>PHP <%=subTotal%>.00</td>
               <%  total = (total || 0) + subTotal; i++; }) %>
            </tr>
        </table>
        <div class="total-price">
            <table>
                <tr>
                    <td>Sub-Total</td>
                    <td>PHP <%=total%>.00</td>
                </tr>
                <tr>
                    <td>Delivery Fee</td>
                    <td>PHP 50.00</td>
                </tr>
                <tr>
                    <td>Total</td>
                    <%  total = total + 50 %>
                    <td>PHP <%=total%>.00</td>
                </tr>
            </table>
        </div>
        <a href="/checkout"  onClick="return alert('By clicking ok, you agree to payment via Cash-on-Delivery for your Order. Your order will be placed and you will be redirected.')" class="btn" id="checkout-btn">Checkout &#8594;</a>
            <% } else{ %>
            <tr>
                <td colspan=1 align="center"></br></br>No items in your Cart (yet) Click Products to browse our catalogue now!</td>
            </tr>
        </table>
        <a href="/product" class="btn" id="checkout-btn">Products &#8594;</a>
            <% } %>

    </div>

    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col-1">
                    <div class="app-logo">
                        <img src="footer-logo.png" alt="">
                        <img src="" alt="">
                    </div>
                    <h3>For The Happiness Of The Customer</h3>
                </div>
            </div>
            <hr>
            <p class="copyright">Copyright &copy; 2020</p>
        </div>
    </div>

    <script>
        let MenuItems = document.getElementById("MenuItems");

        MenuItems.style.maxHeight = "0px";

        function menutoggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px";
            } else {
                MenuItems.style.maxHeight = "0px";
            }
        }
    </script>




</body>

</html>